    GAME --> HIGH_SCORE_DISPLAY
    HIGHSCORES --> HIGH_SCORE_DISPLAY
    LEADER --> HIGH_SCORE_DISPLAY
    
    %% Service Dependencies
    GAME --> GAME_STATE
    GAME --> SERVER_LOGGER
    HIGH_SCORE_DISPLAY --> SERVER_LOGGER
    
    %% Model Usage
    HIGH_SCORE_DISPLAY --> HIGH_SCORE_MODEL
    HIGH_SCORE_DISPLAY --> API_RESPONSE
    GAME --> SAVE_REQUEST
    GAME --> GAME_CIRCLE
    GAME --> API_RESPONSE
    SERVER_LOGGER --> CLIENT_LOG
    DIAG --> API_RESPONSE
    
    %% Navigation Flow
    HOME -.->|"Play Game"| GAME
    HOME -.->|"Leaderboard"| LEADER
    GAME -.->|"High Score"| HIGHSCORES
    GAME -.->|"Home"| HOME
    LEADER -.->|"Play Game"| GAME
    LEADER -.->|"Back to Menu"| HOME
    
