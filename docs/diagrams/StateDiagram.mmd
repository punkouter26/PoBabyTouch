        LEADER[Leader.razor<br/>Simple Leaderboard]
        DIAG[Diag.razor<br/>System Diagnostics]
    end
    
    subgraph "Shared Components"
        HIGH_SCORE_DISPLAY[HighScoreDisplay.razor<br/>Reusable Score List]
