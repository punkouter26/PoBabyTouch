@page "/"

<PageTitle>PoBabyTouchGc</PageTitle>

<div class="home-container">
    <div class="game-title">
        <h1>PoBabyTouch</h1>
    </div>
    
    <FluentStack Orientation="FluentOrientation.Vertical" HorizontalAlignment="HorizontalAlignment.Center" VerticalGap="20" Class="menu-buttons">
        <FluentButton Appearance="Appearance.Accent" 
                      OnClick="@(() => NavigateTo("/game"))"
                      Class="fluent-menu-button"
                      aria-label="Start playing the game">
            ▶ Play Game
        </FluentButton>
        
        <FluentButton Appearance="Appearance.Accent"
                      OnClick="@(() => NavigateTo("/game?mode=baby"))"
                      Class="fluent-menu-button baby-mode-button"
                      aria-label="Start baby mode with easy gameplay">
            ♥ Baby Mode
        </FluentButton>
        
        <FluentButton Appearance="Appearance.Accent"
                      OnClick="@(() => NavigateTo("/leader"))"
                      Class="fluent-menu-button"
                      aria-label="View the leaderboard">
            🏆 Leaderboard
        </FluentButton>
        
        <FluentButton Appearance="Appearance.Accent"
                      OnClick="@(() => NavigateTo("/stats"))"
                      Class="fluent-menu-button stats-button"
                      aria-label="View game statistics">
            📊 Statistics
        </FluentButton>
    </FluentStack>
    
    <div class="footer">
        <p>Version 1.0 &copy; 2025</p>
    </div>
</div>

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    
    private void NavigateTo(string uri)
    {
        Navigation.NavigateTo(uri);
    }
}
