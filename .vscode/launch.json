{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch API + Client",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-for-launch",
            "program": "${workspaceFolder}/src/PoBabyTouchGc.Api/bin/Debug/net10.0/PoBabyTouchGc.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/PoBabyTouchGc.Api",
            "stopAtEntry": false,
            "postDebugTask": "kill-dotnet",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "http://localhost:5173"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Launch API Only",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-for-launch",
            "program": "${workspaceFolder}/src/PoBabyTouchGc.Api/bin/Debug/net10.0/PoBabyTouchGc.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/PoBabyTouchGc.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ],
    "compounds": [
        {
            "name": "Full Stack (API + Client)",
            "configurations": [
                "Launch API + Client"
            ],
            "preLaunchTask": "run-client",
            "stopAll": true
        }
    ]
}